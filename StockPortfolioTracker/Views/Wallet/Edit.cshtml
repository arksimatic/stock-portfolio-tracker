@model StockPortfolioTracker.Models.WalletStockViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1 class="my-4 text-center">Edit stock in wallet</h1>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="StockExchange" class="control-label"></label>
                            <input asp-for="StockExchange" class="form-control" />
                            <span asp-validation-for="StockExchange" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ticker" class="control-label"></label>
                            <input asp-for="Ticker" class="form-control" />
                            <span asp-validation-for="Ticker" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Shares" class="control-label"></label>
                            <input asp-for="Shares" class="form-control" />
                            <span asp-validation-for="Shares" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AverageShareCost" class="control-label"></label>
                            <input asp-for="AverageShareCost" class="form-control" />
                            <span asp-validation-for="AverageShareCost" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CurrencyCode" class="control-label"></label>
                            <select asp-for="CurrencyCode" asp-items="Html.GetEnumSelectList<StockPortfolioTracker.Models.CurrencyCode>()" class="form-control"></select>
                            <span asp-validation-for="CurrencyCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BuyDateTime" class="control-label"></label>
                            <input asp-for="BuyDateTime" class="form-control" type="date" />
                            <span asp-validation-for="BuyDateTime" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="@Model.WalletId" />
                        <input type="hidden" asp-for="@Model.Wallet_X_StockId" />
                        <input type="hidden" asp-for="@Model.StockId" />
                        <div class="form-group mt-3 d-flex justify-content-between">
                            <a asp-controller="Wallet" asp-action="Index" asp-route-walletId="@Model.WalletId" class="btn btn-secondary">Back</a>
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
