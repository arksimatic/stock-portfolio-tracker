@model StockPortfolioTracker.ViewModels.WalletViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1 class="my-4 text-center">Edit Wallet</h1>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="WalletId" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DefaultCurrencyCode" class="control-label"></label>
                            <select asp-for="DefaultCurrencyCode" asp-items="Html.GetEnumSelectList<StockPortfolioTracker.Models.CurrencyCode>()" class="form-control"></select>
                            <span asp-validation-for="DefaultCurrencyCode" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3 d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back</a>
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
